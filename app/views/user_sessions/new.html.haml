- form_for @user_session, :url => user_session_path do |f|
  = f.error_messages
 
  %p
    = f.label :email, t('email')
    %br
    = f.text_field :email
 
  %p
    = f.label :password, t('password')
    %br
    = f.password_field :password
 
  %p
    = f.check_box :remember_me
    %br
    = f.label :remember_me,  t('remeber_me'), :class => :left
  
  %p
    = f.submit "Login"
